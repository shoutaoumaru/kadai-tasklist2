<% if @users.any? %>
  <ul class="list-unstyled">
    <% @users.each do |user| %>
      <li class="media">
        <%= render 'microposts/microposts', microposts: @microposts %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
           <p><%#= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>